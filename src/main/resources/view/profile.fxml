<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ProfileController"
            stylesheets="@app.css"
            prefWidth="800" prefHeight="600">

    <!-- Top Navigation - Made responsive -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 10;" spacing="10">
            <Button text="â† Back to Dashboard" fx:id="backToDashboardBtn"
                    onAction="#handleBackToDashboard"
                    styleClass="btn btn-secondary"
                    wrapText="true" maxHeight="Infinity"/>
            <Region>
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Region>
            <Label text="Profile Settings" styleClass="nav-title" wrapText="true"/>
        </HBox>
    </top>

    <!-- Main Content - Made fully responsive -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- User Info Display -->
                <VBox styleClass="content-card" spacing="10">
                    <Label text="Your Profile" styleClass="subtitle" wrapText="true"/>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="120" halignment="RIGHT" hgrow="SOMETIMES"/>
                            <ColumnConstraints prefWidth="200" hgrow="ALWAYS" maxWidth="Infinity"/>
                        </columnConstraints>

                        <Label text="Username:" styleClass="label-bold" wrapText="true"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="usernameLabel" wrapText="true"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:" styleClass="label-bold" wrapText="true"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="emailLabel" wrapText="true"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Name:" styleClass="label-bold" wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="nameLabel" wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Status:" styleClass="label-bold" wrapText="true"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="memberSinceLabel" text="Active member" wrapText="true"
                               styleClass="success-label"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Message Display -->
                <Label fx:id="messageLabel" styleClass="info-label"
                       wrapText="true" maxWidth="Infinity"/>

                <!-- Edit Profile Section -->
                <VBox fx:id="editProfileSection" spacing="10" styleClass="content-card">
                    <Label text="Edit Profile Information" styleClass="subtitle" wrapText="true"/>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="120" halignment="RIGHT" hgrow="SOMETIMES"/>
                            <ColumnConstraints prefWidth="200" hgrow="ALWAYS" maxWidth="Infinity"/>
                        </columnConstraints>

                        <Label text="Username:" wrapText="true"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="usernameField" promptText="Username"
                                   styleClass="text-field"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </TextField>

                        <Label text="Email:" wrapText="true"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField" promptText="Email address"
                                   styleClass="text-field"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </TextField>

                        <Label text="First Name:" wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="firstNameField" promptText="First name"
                                   styleClass="text-field"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </TextField>

                        <Label text="Last Name:" wrapText="true"
                               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="lastNameField" promptText="Last name"
                                   styleClass="text-field"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </TextField>
                    </GridPane>

                    <HBox spacing="5" style="-fx-padding: 10 0 0 0;">
                        <Button text="Save Changes" fx:id="saveChangesBtn"
                                onAction="#handleSaveChanges"
                                styleClass="btn btn-primary" wrapText="true" maxWidth="Infinity">
                            <HBox.hgrow>ALWAYS</HBox.hgrow>
                        </Button>
                        <Button text="Cancel" fx:id="cancelBtn"
                                onAction="#handleCancel"
                                styleClass="btn btn-secondary" wrapText="true" maxWidth="Infinity">
                            <HBox.hgrow>ALWAYS</HBox.hgrow>
                        </Button>
                        <Button text="Change Password" fx:id="changePasswordBtn"
                                onAction="#showChangePasswordSection"
                                styleClass="btn btn-danger" wrapText="true" maxWidth="Infinity">
                            <HBox.hgrow>ALWAYS</HBox.hgrow>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Change Password Section -->
                <VBox fx:id="changePasswordSection" spacing="10" visible="false" styleClass="content-card">
                    <Label text="Change Password" styleClass="subtitle" wrapText="true"/>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="140" halignment="RIGHT" hgrow="SOMETIMES"/>
                            <ColumnConstraints prefWidth="200" hgrow="ALWAYS" maxWidth="Infinity"/>
                        </columnConstraints>

                        <Label text="Current Password:" wrapText="true"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="currentPasswordField" promptText="Current password"
                                       styleClass="password-field"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </PasswordField>

                        <Label text="New Password:" wrapText="true"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="newPasswordField" promptText="At least 6 characters"
                                       styleClass="password-field"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </PasswordField>

                        <Label text="Confirm Password:" wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter new password"
                                       styleClass="password-field"
                                       GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <GridPane.hgrow>ALWAYS</GridPane.hgrow>
                        </PasswordField>
                    </GridPane>

                    <HBox spacing="5" style="-fx-padding: 10 0 0 0;">
                        <Button text="Update Password"
                                onAction="#handleChangePassword"
                                styleClass="btn btn-success" wrapText="true" maxWidth="Infinity">
                            <HBox.hgrow>ALWAYS</HBox.hgrow>
                        </Button>
                        <Button text="Cancel"
                                onAction="#showEditProfileSection"
                                styleClass="btn btn-secondary" wrapText="true" maxWidth="Infinity">
                            <HBox.hgrow>ALWAYS</HBox.hgrow>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Danger Zone -->
                <VBox spacing="5" styleClass="danger-zone">
                    <Label text="!!! Danger Zone" styleClass="danger-title" wrapText="true"/>
                    <Label text="Once you delete your account, there is no going back. All your data will be permanently deleted."
                           styleClass="danger-text" wrapText="true"/>
                    <Button text="Delete My Account"
                            onAction="#handleDeleteAccount"
                            styleClass="btn btn-danger" wrapText="true" maxWidth="Infinity">
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Button>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>