<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ProfileController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Navigation -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="10">
            <Button text="â† Back to Dashboard"
                    fx:id="backToDashboardBtn"
                    onAction="#handleBackToDashboard"
                    style="-fx-background-color: #34495e; -fx-text-fill: white;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="ðŸ‘¤ Profile Settings"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 30;" maxWidth="700">

                <!-- User Info Display -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;"
                      spacing="15">
                    <Label text="Your Profile"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <GridPane hgap="15" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="nameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                               style="-fx-font-weight: bold;"/>
                        <Label fx:id="memberSinceLabel" text="Active member"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               style="-fx-text-fill: #27ae60;"/>
                    </GridPane>
                </VBox>

                <!-- Message Display -->
                <Label fx:id="messageLabel"
                       style="-fx-font-size: 14px;"
                       wrapText="true"
                       maxWidth="650"/>

                <!-- Edit Profile Section -->
                <VBox fx:id="editProfileSection" spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <Label text="Edit Profile Information"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <!-- Username (read-only) -->
                        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="usernameField" promptText="Username"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Email -->
                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField" promptText="Email address"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- First Name -->
                        <Label text="First Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="firstNameField" promptText="First name"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <!-- Last Name -->
                        <Label text="Last Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="lastNameField" promptText="Last name"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <Button text="Save Changes" fx:id="saveChangesBtn"
                                onAction="#handleSaveChanges"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 25;"/>

                        <Button text="Cancel" fx:id="cancelBtn"
                                onAction="#handleCancel"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 25;"/>

                        <Button text="Change Password" fx:id="changePasswordBtn"
                                onAction="#showChangePasswordSection"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 8 25;"/>
                    </HBox>
                </VBox>

                <!-- Change Password Section (hidden by default) -->
                <VBox fx:id="changePasswordSection" spacing="15" visible="false"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                    <Label text="Change Password"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
                            <ColumnConstraints prefWidth="300"/>
                        </columnConstraints>

                        <Label text="Current Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="newPasswordField" promptText="At least 6 characters"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Confirm New Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter new password"
                                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <Button text="Update Password"
                                onAction="#handleChangePassword"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 8 25;"/>

                        <Button text="Cancel"
                                onAction="#showEditProfileSection"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 25;"/>
                    </HBox>
                </VBox>

                <!-- Danger Zone -->
                <VBox spacing="10" style="-fx-background-color: #fee; -fx-background-radius: 10; -fx-padding: 20;"
                      fx:id="dangerZone">
                    <Label text="âš ï¸ Danger Zone"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>

                    <Label text="Once you delete your account, there is no going back.
                            All your data will be permanently deleted."
                           style="-fx-text-fill: #7f8c8d;" wrapText="true"/>

                    <Button text="Delete My Account"
                            onAction="#handleDeleteAccount"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8 25;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>