<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.habit.controller.CreateCategoryController"
      spacing="15" alignment="CENTER"
      styleClass="content-area">

    <Label text="Create Habit Category" styleClass="title-text"/>

    <TextField fx:id="titleField" promptText="Category title"/>
    <TextArea fx:id="descriptionField" promptText="Description"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave" styleClass="btn-primary"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="btn-danger"/>
    </HBox>

</VBox>
