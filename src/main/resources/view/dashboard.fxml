<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.habit.controller.DashboardController"
            stylesheets="@app.css"
            prefWidth="1000" prefHeight="700">

    <!-- Left Navigation Panel -->
    <left>
        <VBox spacing="10" styleClass="nav-panel" minWidth="150" prefWidth="200" maxWidth="250">
            <Label text="Navigation" styleClass="nav-title"/>
            <Separator styleClass="separator"/>

            <!-- Home Button -->
            <Button fx:id="homeBtn" text="ðŸ  Dashboard"
                    styleClass="nav-btn btn-primary"
                    onAction="#showHome"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
            </Button>

            <!-- Profile Button -->
            <Button fx:id="profileBtn" text="ðŸ‘¤ Profile"
                    styleClass="nav-btn btn-purple"
                    onAction="#goToProfile"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
            </Button>

            <Separator styleClass="separator"/>

            <!-- Quick Actions -->
            <Label text="Quick Actions" styleClass="nav-title"/>
            <Button text="âž• Create Category"
                    styleClass="nav-btn btn-success"
                    onAction="#openCreateCategory"
                    maxWidth="Infinity"/>
            <Button text="âž• Create Habit"
                    styleClass="nav-btn btn-info"
                    onAction="#openCreateHabit"
                    maxWidth="Infinity"/>
            <Button text="ðŸ”„ Refresh"
                    styleClass="nav-btn btn-warning"
                    onAction="#refreshDashboard"
                    maxWidth="Infinity"/>

            <Separator styleClass="separator"/>

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="ðŸšª Logout"
                    styleClass="nav-btn btn-danger"
                    onAction="#handleLogout"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
            </Button>

            <!-- User Info -->
            <VBox spacing="5" styleClass="user-info-box">
                <Label fx:id="welcomeLabel" text="Welcome!" styleClass="user-info-text"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <BorderPane fx:id="contentArea" styleClass="content-area">
            <!-- Default content will be loaded here -->
        </BorderPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" spacing="10">
            <Label fx:id="statusLabel" text="Ready" styleClass="status-text">
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="loginTimeLabel" text="" styleClass="login-time"/>
            <Separator orientation="VERTICAL"/>
            <Button text="ðŸ”„" onAction="#refreshDashboard" styleClass="btn-refresh"/>
        </HBox>
    </bottom>

</BorderPane>