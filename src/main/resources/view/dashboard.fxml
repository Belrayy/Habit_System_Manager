    <!-- Left Navigation Panel - Made responsive -->
    <left>
        <VBox spacing="10" styleClass="nav-panel" minWidth="150" prefWidth="200" maxWidth="250">
            <Label text="Navigation" styleClass="nav-title"/>
            <Separator styleClass="separator"/>

            <!-- Home Button -->
            <Button fx:id="homeBtn" text="ðŸ  Home"
                    styleClass="nav-btn btn-primary"
                    onAction="#showHome"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Button>

            <!-- Profile Button -->
            <Button fx:id="profileBtn" text="ðŸ‘¤ Profile"
                    styleClass="nav-btn btn-purple"
                    onAction="#goToProfile"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Button>

            <Separator styleClass="separator"/>

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="ðŸšª Logout"
                    styleClass="nav-btn btn-danger"
                    onAction="#handleLogout"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets left="5" right="5"/>
                </VBox.margin>
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Button>

            <!-- User Info - Made responsive -->
            <VBox spacing="5" style="-fx-padding: 20 5 10 5;">
                <Label fx:id="welcomeLabel" text="Welcome!"
                       style="-fx-text-fill: white; -fx-font-size: 12px; -fx-wrap-text: true;"/>
                <Label fx:id="userEmailLabel" text=""
                       style="-fx-text-fill: #95a5a6; -fx-font-size: 11px; -fx-wrap-text: true;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area - Made responsive -->
    <center>
        <BorderPane fx:id="contentArea" styleClass="content-area">
            <center>
                <VBox fx:id="homeContent" spacing="20" alignment="CENTER">
                    <Label text="ðŸ  Welcome to Your Dashboard"
                           styleClass="welcome-text" wrapText="true" maxWidth="Infinity"
                           textAlignment="CENTER"/>
                    <Label fx:id="dashboardWelcomeLabel" text=""
                           styleClass="user-info-text" wrapText="true" maxWidth="Infinity"
                           textAlignment="CENTER"/>
                </VBox>
            </center>
        </BorderPane>
    </center>

    <!-- Status Bar - Made responsive -->
    <bottom>
        <HBox styleClass="status-bar" spacing="10">
            <Label fx:id="statusLabel" text="Ready"
                   styleClass="status-text" wrapText="true">
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="loginTimeLabel" text=""
                   style="-fx-text-fill: #95a5a6; -fx-font-size: 11px; -fx-wrap-text: true;"/>
        </HBox>
    </bottom>

</BorderPane>