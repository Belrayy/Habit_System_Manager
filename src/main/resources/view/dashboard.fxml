<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.DashboardController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f0f0;">

    <!-- Top Menu Bar -->
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Left Navigation Panel -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;"
              minWidth="200" maxWidth="200">

            <Label text="Navigation"
                   style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Separator style="-fx-background-color: #34495e;"/>

            <!-- Home Button -->
            <Button fx:id="homeBtn" text="ðŸ  Home"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;"
                    onAction="#showHome"
                    prefWidth="160" prefHeight="40"/>

            <!-- Profile Button -->
            <Button fx:id="profileBtn" text="ðŸ‘¤ Profile"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"
                    onAction="#showProfile"
                    prefWidth="160" prefHeight="40"/>

            <Separator style="-fx-background-color: #34495e;"/>

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="ðŸšª Logout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;"
                    onAction="#handleLogout"
                    prefWidth="160" prefHeight="40"/>

            <!-- User Info -->
            <VBox spacing="5" style="-fx-padding: 20 0 0 0;">
                <Label fx:id="welcomeLabel"
                       text="Welcome!"
                       style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                <Label fx:id="userEmailLabel"
                       text=""
                       style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea">
            <!-- Default Home Content -->
            <VBox fx:id="homeContent" spacing="20" alignment="CENTER">
                <Label text="ðŸ  Welcome to Your Dashboard"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Label fx:id="dashboardWelcomeLabel"
                       text=""
                       style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>


            </VBox>

            <!-- Profile Content (Hidden by default) -->
            <VBox fx:id="profileContent" spacing="20" alignment="CENTER" visible="false">
                <Label text="ðŸ‘¤ User Profile"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
                    <Label fx:id="profileUsernameLabel" text="Username: " style="-fx-font-size: 16px;"/>
                    <Label fx:id="profileEmailLabel" text="Email: " style="-fx-font-size: 16px;"/>
                    <Label fx:id="profileNameLabel" text="Name: " style="-fx-font-size: 16px;"/>
                </VBox>

                <Button fx:id="profileBtn" text="ðŸ‘¤ Profile"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"
                        onAction="#showProfilePage"
                prefWidth="160" prefHeight="40"/>
            </VBox>
        </StackPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 5 10;" spacing="10">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #7f8c8d;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="loginTimeLabel" text="" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>